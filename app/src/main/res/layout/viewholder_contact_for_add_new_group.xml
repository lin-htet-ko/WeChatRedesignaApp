<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_2x">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivGroupNewMemberPersonImg"
            android:layout_width="@dimen/size_post_profile_img"
            android:layout_height="@dimen/size_post_profile_img"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/circle_img"
            app:srcCompat="@drawable/placeholder_portrait" />

        <View
            android:layout_width="@dimen/size_stroke_person"
            android:layout_height="@dimen/size_stroke_person"
            android:layout_gravity="end|bottom"
            android:background="@drawable/background_circle" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvGroupNewMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_2x"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="?attr/colorPrimary" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivContactForAddNewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_check_24"
        android:layout_gravity="end|center_vertical"
        app:contentPadding="@dimen/margin_small" />
</androidx.appcompat.widget.LinearLayoutCompat>